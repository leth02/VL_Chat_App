[flake8]
select = W293,W291,E502,E704,E703,E701,E401,E304,E274,E273,E272,E271,E251,E242,E241,E231,E228,E227,E226,E225,E224,E223,E222,E221,E203,E202,E201,E101,E111
exclude =
    # No need to traverse our git directory
    .git,
    # There's no value in checking cache directories
    __pycache__,
    # This contains builds of flake8 that we don't want to check
    dist.py,
    # Ignore libraries and modules in site-packages
    site-packages